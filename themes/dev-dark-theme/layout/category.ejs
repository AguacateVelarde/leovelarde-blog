<%- partial('partial/category/header') %>
<main class="main-content">
    <section class="posts">
        <% site.categories.findOne({ name: page.category }).posts.sort('date', -1).each((post) => { %>        
            <%- partial('partial/post-item', { title: post.title, datetime: post.date, categories: post.categories, description: post.description, lang: post.lang }) %>
        <% }) %>
    </section>
</main>