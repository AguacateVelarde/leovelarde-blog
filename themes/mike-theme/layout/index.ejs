
<%- partial('partial/header', { title: config.title, description: config.content }) %>
<main class="main-content">
    <section class="posts-lasts">
        <h3 class="posts__head__title">Lasts</h3>
        <% site.posts.forEach((post) => { %>
        <a href="<%- post.lang %>/<%- url_categories(post.categories) %>/<%- post.title %>" title="<%- post.description %>">
            <article class="posts-lasts__post">
                <h2 class="posts-lasts__post__title" itemprop="name"><%- post.title %></h2>
                <time class="posts-lasts__post__day" datetime="<%- post.date %>" itemprop="dateCreated"><%- date(post.date, 'D MMM YY') %></time>
            </article>
        </a>
        <% }) %>
    </section>

    <h5 class="divisor">ASSUNTOS</h5>
    <% site.categories.forEach((category) => { %>
    <section class="posts">
        <a class="posts__head" href="categories/<%- category.name %>" title="Posts sobre <%- category.name %>">
            <h3 class="posts__head__title"><%- category.name %></h3>
        </a>
        <div class="posts__container">
            <% site.categories.findOne({ name: category.name }).posts.sort('date', -1).each((post) => { %>
            <a class="posts__link" href="<%- post.lang %>/<%- category.name %>/<%- post.title %>" title="<%- post.description %>"><%- post.title %></a>
            <% }) %>
        </div>
    </section>
    <% }) %>
</main>